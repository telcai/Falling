.container
	margin-bottom 70px
#content
	box-sizing border-box
	position relative
	height 100%
	min-height 630px
	top 50px
	width contWidth
	margin 20px auto
	padding 15px 15px 0px 15px 
 
.clear 
	clear both

.article-img
	box-sizing border-box 
	background-color #000
	width imgWidth
	height auto
	margin 15px 1% 
	border 5px solid #ccc 
	box-shadow  3px 3px 6px #000
	border-radius 3px 
	float left 
	position relative 

.article-img img
	width 100% 
	height auto 

#foot
	height 50px
	padding 15px
	background-color rgba(0,0,0,0.5)
	width 100%
	position relative
	bottom 0px

.copyright
	color titleColor
	margin 0px
	text-align center
	position relative
	a
		font-size 18px
		color titleColor

.copyright a:hover
	color hoverColor

.article-img a
	color fontColor	

.art-declare
	box-sizing border-box
	color fontColor
	position absolute
	bottom 0px
	padding 10px 8px
	width 100%
	height 50px
	overflow hidden
	background-color rgba(0,0,0,0.5)
	transition: all 0.5s;
	-moz-transition: all 0.5s;	/* Firefox 4 */
	-webkit-transition: all 0.5s;	/* Safari å’Œ Chrome */
	-o-transition: all 0.5s;	/* Opera */
	

.article-img:hover 
	.art-declare
		bottom 15px 
		background-color rgba(255,255,255,0.7)
	.art-declare a
		color hoverColor
	.post-tag
		color hoverColor


.post-tag
	float right
	ul 
		height 100%

.art-declare h4 
	white-space nowrap
	text-overflow ellipsis
	overflow hidden
	margin 0px
	float left
	width 100px
    